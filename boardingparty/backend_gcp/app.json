{
    "name": "boardingparty-terraform",
    "env": {
        "zone": {
            "description": "Zone for disk and VM, e.g. europe-west1-c. Full list here https://console.cloud.google.com/compute/zones",
            "required": true
        }
    },
    "build": {
        "skip": true
    },
    "hooks": {
        "prebuild": {
            "commands": [
                "echo 'prebuild'",
                "docker pull hashicorp/terraform:light",
                "docker tag hashicorp/terraform:light gcr.io/corepox-staging/boardingparty-terraform"
            ]
        },
        "postbuild": {
            "commands": [
                "echo 'printenv'",
                "printenv",
                "echo 'postbuild'",
                "./sync"
            ]
        },
        "precreate": {
            "commands": [
                "echo 'precreate'"
            ]
        },
        "postcreate": {
            "commands": [
                "echo 'postcreate'"
            ]
        }
    }
}