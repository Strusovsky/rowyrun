{
  "name": "rowy-builder",
  "build": {
    "skip": true
  },
  "hooks": {
    "prebuild": {
      "commands": [
        "npm install -g node@14.0.0 --force",
        "cd hooks && npm install",
        "./deploy"
      ]
    },
    "postbuild": {
      "commands": ["./sync", "node hooks/setUrls.mjs"]
    },
    "postcreate": {
      "commands": [
        "node hooks/postcreate.mjs",
        "gcloud run services update rowy-builder --service-account rowy-builder@$GOOGLE_CLOUD_PROJECT.iam.gserviceaccount.com --platform managed"
      ]
    }
  }
}
