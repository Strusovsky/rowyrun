{
    "name": "rowy-deploy",
    "build": {
        "skip": true
    },
    "hooks": {
        "prebuild": {
            "commands": [
                "echo 'prebuild'",
                "./deploy",
                "sudo su -c '. /usr/local/nvm/nvm.sh && nvm install 14 && nvm use 14'",
                "cd hooks && npm install",
                "node -v",
                "node hooks/prebuild"
            ]
        },
        "postbuild": {
            "commands": [
                "echo 'postbuild'",
                "./sync"
            ]
        },
        "precreate": {
            "commands": [
                "echo 'precreate'"
            ]
        },
        "postcreate": {
            "commands": [
                "echo 'postcreate'",
                "node hooks/postcreate"
            ]
        }
    }
}