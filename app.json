{
    "name": "rowy-deploy",
    "build": {
        "skip": true
    },
    "hooks": {
        "prebuild": {
            "commands": [
                "npm install -g node@14.0.0 --force",
                "cd hooks && npm install",
                "./deploy"
            ]
        },
        "postbuild": {
            "commands": [
                "./firestore",
                "./sync"
            ]
        },
        "postcreate": {
            "commands": [
                "node hooks/postcreate.mjs"
            ]
        }
    }
}