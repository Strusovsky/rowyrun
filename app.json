{
    "name": "rowy-deploy",
    "build": {
        "skip": true
    },
    "hooks": {
        "prebuild": {
            "commands": [
                "echo 'prebuild'",
                "npm install -g node@14.0.0 --force",
                "node -v",
                "./deploy",
                "cd hooks && npm install",          
                "node hooks/prebuild.mjs"
            ]
        },
        "postbuild": {
            "commands": [
                "echo 'postbuild'",
                "./sync"
            ]
        },
        "precreate": {
            "commands": [
                "echo 'precreate'"
            ]
        },
        "postcreate": {
            "commands": [
                "echo 'postcreate'",
                "node hooks/postcreate.mjs"
            ]
        }
    }
}